# Set security headers for all assets (good practice)
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Caching for a year
/images/*
  Cache-Control: public, max-age=31536000, immutable
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Always revalidate the index
/index.html
  Cache-Control: no-cache
/
  Cache-Control: no-cache

# Preload fonts and images
/
  Link: </fonts/StamAshkenazCLM.woff2>; rel=preload; as=font; type="font/woff2"; crossorigin=anonymous
  Link: </images/gavriel.avif>; rel=preload; as=image; type="image/avif"
  Link: </fonts/ShofarRegular.woff2>; rel=preload; as=font; type="font/woff2"; crossorigin=anonymous
  Link: </images/background2.avif>; rel=preload; as=image; type="image/avif"
  Link: </images/background3.avif>; rel=preload; as=image; type="image/avif"
